{
  "importMap": "import_map.json",
  "fmt": {
    "indentWidth": 2,
    "lineWidth": 80,
    "proseWrap": "always",
    "semiColons": true,
    "singleQuote": true,
    "useTabs": false
  },
  "exclude": [
    "main.cjs"
  ],
  "tasks": {
    "build": "deno run --allow-read --allow-write --allow-run --allow-env build.ts",
    "test": "deno test ."
  }
}
