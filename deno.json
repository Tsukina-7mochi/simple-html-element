{
  "compilerOptions": {
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true
  },
  "fmt": {
    "indentWidth": 2,
    "lineWidth": 80,
    "proseWrap": "always",
    "semiColons": true,
    "singleQuote": true,
    "useTabs": false
  },
  "tasks": {
    "build": "deno run --allow-read --allow-write --allow-run --allow-env build.ts",
    "test": "deno test ."
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@^1.0.14",
    "esbuild": "npm:esbuild"
  }
}
